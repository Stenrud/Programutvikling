<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>
<GridPane fx:controller="s305061.gif.GifController" xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="600" alignment="CENTER" hgap="10" vgap="10">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Iterations:"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="iterationField" text="10"
               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Scale:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="scaleField" text="2"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Separator prefWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="4"/>

    <Label text="Origin X:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="originXField" text="0"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Origin Y:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="originYField" text="0"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Width:"
           GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <TextField fx:id="widthField" text="10"
               GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <Label text="Height:"
           GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <TextField fx:id="heightField" text="10"
               GridPane.columnIndex="3" GridPane.rowIndex="4"/>

    <Button text="Crop" onAction="#crop"
            GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Separator prefWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="4"/>

    <Button text="Create GIF" onAction="#createGif"
            GridPane.columnIndex="1" GridPane.rowIndex="9"/>
</GridPane>